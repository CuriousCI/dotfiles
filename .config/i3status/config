# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
	color_good = "#b8bb26"
	color_degraded = "#fabd2f"
	color_bad = "#fb4934"
}

# order += "cpu_usage"
# order += "memory"
order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"


ethernet _first_ {
    format_up = "󱎔 %speed"
    format_down = ""
}

wireless _first_ {
	format_up = "  %essid"
    format_down = "󰖪"
}

volume master {
    format = "󰝚 %volume"
    format_muted = "󰝛 %volume"
	device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
    format = " %usage"
}

battery all {
	# format = "%status %percentage %remaining %consumption"
	format = "%status %percentage %remaining"
    status_chr = "󱐋"
    status_bat = " "
    status_unk = "?"
    status_full = " "
}

memory {
    format = "%used"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

tztime local {
	format = "%d/%m/%Y %H:%M"
}
